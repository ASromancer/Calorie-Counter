<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" >

        <ImageView
            android:id="@+id/foodImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/foodImageView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtConsumedDateTime"
            />

        <TextView
            android:id="@+id/txtConsumedCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 kcal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/txtConsumedGram"
            android:layout_below="@+id/txtFoodName"/>

        <TextView
            android:id="@+id/txtConsumedDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20:00:00 07/03/2023"
            android:textStyle="italic"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/foodImageView"/>

        <TextView
            android:id="@+id/txtConsumedGram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 gram"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/foodImageView"
            android:layout_below="@+id/txtFoodName"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
